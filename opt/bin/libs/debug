adblock_dnsmasq_debug() {

	if [ -n "$(cat < '/opt/etc/dnsmasq.conf' | sed '/^$/d' | sed 's/^\(.*\)\(#.*\)/\2/; /^#/d; /^$/d' | grep "adblock.dnsmasq")" ]; then
#		result=$(cat < "/opt/apps/kvas/bin/main/adblock")
